{
  "name": "vscode-criticmarkup",
  "displayName": "CriticMarkup for Visual Studio Code",
  "description": "A CriticMarkup extension for Visual Studio Code.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "markdown",
    "criticmarkup",
    "critic markup"
  ],
  "publisher": "jbearak",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/jbearak/vscode-criticmarkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbearak/vscode-criticmarkup.git"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:criticmarkup.nextChange",
    "onCommand:criticmarkup.prevChange"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "criticmarkup.nextChange",
        "title": "CriticMarkup: Next Change",
        "icon": "$(arrow-down)",
        "enablement": "criticmarkup.hasChanges"
      },
      {
        "command": "criticmarkup.prevChange",
        "title": "CriticMarkup: Previous Change",
        "icon": "$(arrow-up)",
        "enablement": "criticmarkup.hasChanges"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "criticmarkup.prevChange",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation"
        },
        {
          "command": "criticmarkup.nextChange",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "criticmarkup.nextChange",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "criticmarkup.prevChange",
        "key": "alt+shift+k",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/criticmarkup.json",
        "scopeName": "criticmarkup.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.14.4",
    "@types/vscode": "^1.31.0",
    "tslint": "^5.14.0",
    "typescript": "^5.9.3"
  },
  "private": true
}
