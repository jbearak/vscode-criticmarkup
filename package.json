{
  "name": "vscode-criticmarkup",
  "displayName": "CriticMarkup for Visual Studio Code",
  "description": "A CriticMarkup extension for Visual Studio Code.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "markdown",
    "criticmarkup",
    "critic markup"
  ],
  "publisher": "jbearak",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/jbearak/vscode-criticmarkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbearak/vscode-criticmarkup.git"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:criticmarkup.nextChange",
    "onCommand:criticmarkup.prevChange"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "criticmarkup.nextChange",
        "title": "Next Change",
        "icon": "$(chevron-down)"
      },
      {
        "command": "criticmarkup.prevChange",
        "title": "Previous Change",
        "icon": "$(chevron-up)"
      },
      {
        "command": "criticmarkup.markAddition",
        "title": "Mark as Addition"
      },
      {
        "command": "criticmarkup.markDeletion",
        "title": "Mark as Deletion"
      },
      {
        "command": "criticmarkup.markSubstitution",
        "title": "Substitution"
      },
      {
        "command": "criticmarkup.highlight",
        "title": "Highlight"
      },
      {
        "command": "criticmarkup.insertComment",
        "title": "Comment"
      },
      {
        "command": "criticmarkup.highlightAndComment",
        "title": "Comment and highlight"
      },
      {
        "command": "criticmarkup.substituteAndComment",
        "title": "Comment and substitution"
      },
      {
        "command": "criticmarkup.additionAndComment",
        "title": "Comment and mark as addition"
      },
      {
        "command": "criticmarkup.deletionAndComment",
        "title": "Comment and mark as deletion"
      },
      {
        "command": "markdown.formatBold",
        "title": "Bold"
      },
      {
        "command": "markdown.formatItalic",
        "title": "Italic"
      },
      {
        "command": "markdown.formatBoldItalic",
        "title": "Bold Italic"
      },
      {
        "command": "markdown.formatStrikethrough",
        "title": "Strikethrough"
      },
      {
        "command": "markdown.formatUnderline",
        "title": "Underline"
      },
      {
        "command": "markdown.formatInlineCode",
        "title": "Inline Code"
      },
      {
        "command": "markdown.formatCodeBlock",
        "title": "Code Block"
      },
      {
        "command": "markdown.formatLink",
        "title": "Link"
      },
      {
        "command": "markdown.formatBulletedList",
        "title": "Bulleted List"
      },
      {
        "command": "markdown.formatNumberedList",
        "title": "Numbered List"
      },
      {
        "command": "markdown.formatTaskList",
        "title": "Task List"
      },
      {
        "command": "markdown.formatQuoteBlock",
        "title": "Quote Block"
      },
      {
        "command": "markdown.formatHeading1",
        "title": "Heading 1"
      },
      {
        "command": "markdown.formatHeading2",
        "title": "Heading 2"
      },
      {
        "command": "markdown.formatHeading3",
        "title": "Heading 3"
      },
      {
        "command": "markdown.formatHeading4",
        "title": "Heading 4"
      },
      {
        "command": "markdown.formatHeading5",
        "title": "Heading 5"
      },
      {
        "command": "markdown.formatHeading6",
        "title": "Heading 6"
      },
      {
        "command": "markdown.reflowTable",
        "title": "Reflow Table"
      },
      {
        "command": "criticmarkup.debugAuthorName",
        "title": "CriticMarkup: Debug Author Name"
      }
    ],
    "submenus": [
      {
        "id": "markdown.annotations",
        "label": "Markdown Annotations",
        "icon": "$(comment-discussion)"
      },
      {
        "id": "markdown.formatting",
        "label": "Markdown Formatting",
        "icon": "$(edit)"
      },
      {
        "id": "markdown.heading",
        "label": "Heading"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@1"
        },
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown",
          "group": "9_markdown@1"
        },
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown",
          "group": "9_markdown@2"
        }
      ],
      "markdown.annotations": [
        {
          "command": "criticmarkup.highlightAndComment",
          "when": "editorLangId == markdown",
          "group": "1_criticmarkup@1"
        },
        {
          "command": "criticmarkup.additionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_criticmarkup@2"
        },
        {
          "command": "criticmarkup.deletionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_criticmarkup@3"
        },
        {
          "command": "criticmarkup.substituteAndComment",
          "when": "editorLangId == markdown",
          "group": "1_criticmarkup@4"
        },
        {
          "command": "criticmarkup.highlight",
          "when": "editorLangId == markdown",
          "group": "2_criticmarkup@1"
        },
        {
          "command": "criticmarkup.markAddition",
          "when": "editorLangId == markdown",
          "group": "2_criticmarkup@2"
        },
        {
          "command": "criticmarkup.markDeletion",
          "when": "editorLangId == markdown",
          "group": "2_criticmarkup@3"
        },
        {
          "command": "criticmarkup.markSubstitution",
          "when": "editorLangId == markdown",
          "group": "2_criticmarkup@4"
        },
        {
          "command": "criticmarkup.prevChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@1"
        },
        {
          "command": "criticmarkup.nextChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@2"
        }
      ],
      "markdown.formatting": [
        {
          "command": "markdown.formatBold",
          "when": "editorLangId == markdown",
          "group": "1_format@1"
        },
        {
          "command": "markdown.formatItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@2"
        },
        {
          "command": "markdown.formatBoldItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@3"
        },
        {
          "command": "markdown.formatStrikethrough",
          "when": "editorLangId == markdown",
          "group": "1_format@4"
        },
        {
          "command": "markdown.formatUnderline",
          "when": "editorLangId == markdown",
          "group": "1_format@5"
        },
        {
          "command": "markdown.formatInlineCode",
          "when": "editorLangId == markdown",
          "group": "1_format@6"
        },
        {
          "command": "markdown.formatCodeBlock",
          "when": "editorLangId == markdown",
          "group": "1_format@7"
        },
        {
          "command": "markdown.formatLink",
          "when": "editorLangId == markdown",
          "group": "1_format@8"
        },
        {
          "command": "markdown.formatBulletedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@1"
        },
        {
          "command": "markdown.formatNumberedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@2"
        },
        {
          "command": "markdown.formatTaskList",
          "when": "editorLangId == markdown",
          "group": "2_lists@3"
        },
        {
          "command": "markdown.formatQuoteBlock",
          "when": "editorLangId == markdown",
          "group": "2_lists@4"
        },
        {
          "command": "markdown.reflowTable",
          "when": "editorLangId == markdown",
          "group": "2_tables@5"
        },
        {
          "submenu": "markdown.heading",
          "when": "editorLangId == markdown",
          "group": "3_heading@1"
        }
      ],
      "markdown.heading": [
        {
          "command": "markdown.formatHeading1",
          "when": "editorLangId == markdown",
          "group": "1_heading@1"
        },
        {
          "command": "markdown.formatHeading2",
          "when": "editorLangId == markdown",
          "group": "1_heading@2"
        },
        {
          "command": "markdown.formatHeading3",
          "when": "editorLangId == markdown",
          "group": "1_heading@3"
        },
        {
          "command": "markdown.formatHeading4",
          "when": "editorLangId == markdown",
          "group": "1_heading@4"
        },
        {
          "command": "markdown.formatHeading5",
          "when": "editorLangId == markdown",
          "group": "1_heading@5"
        },
        {
          "command": "markdown.formatHeading6",
          "when": "editorLangId == markdown",
          "group": "1_heading@6"
        }
      ]
    },
    "keybindings": [
      {
        "command": "criticmarkup.nextChange",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "criticmarkup.prevChange",
        "key": "alt+shift+k",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/criticmarkup.json",
        "scopeName": "criticmarkup.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "markdown.previewStyles": [
      "./media/criticmarkup.css"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "CriticMarkup",
      "properties": {
        "criticmarkup.disableAuthorNames": {
          "type": "boolean",
          "default": false,
          "description": "Disable automatic author names in comments"
        },
        "criticmarkup.authorName": {
          "type": "string",
          "default": "",
          "description": "Author name to use in comments (leave empty to use OS username)"
        },
        "criticmarkup.includeTimestampInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include timestamp in comment author attribution (format: username (yyyy-mm-dd hh:mm))"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.14.4",
    "@types/vscode": "^1.31.0",
    "fast-check": "^4.3.0",
    "tslint": "^5.14.0",
    "typescript": "^5.9.3"
  },
  "private": true,
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}
