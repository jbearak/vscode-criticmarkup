{
  "name": "vscode-criticmarkup",
  "displayName": "CriticMarkup for Visual Studio Code",
  "description": "A CriticMarkup extension for Visual Studio Code.",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "markdown",
    "criticmarkup",
    "critic markup"
  ],
  "publisher": "jbearak",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/jbearak/vscode-criticmarkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbearak/vscode-criticmarkup.git"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:criticmarkup.nextChange",
    "onCommand:criticmarkup.prevChange",
    "onCommand:criticmarkup.test"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "criticmarkup.nextChange",
        "title": "Next Change",
        "category": "CriticMarkup"
      },
      {
        "command": "criticmarkup.prevChange",
        "title": "Previous Change",
        "category": "CriticMarkup"
      },
      {
        "command": "criticmarkup.test",
        "title": "Test",
        "category": "CriticMarkup"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/criticmarkup.json",
        "scopeName": "criticmarkup.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "criticmarkup.addition",
            "settings": {
              "foreground": "gitDecoration.addedResourceForeground"
            }
          },
          {
            "scope": "criticmarkup.deletion",
            "settings": {
              "foreground": "gitDecoration.deletedResourceForeground"
            }
          },
          {
            "scope": "criticmarkup.substitution",
            "settings": {
              "foreground": "gitDecoration.modifiedResourceForeground"
            }
          },
          {
            "scope": "criticmarkup.comment",
            "settings": {
              "foreground": "descriptionForeground"
            }
          },
          {
            "scope": "criticmarkup.highlight",
            "settings": {
              "foreground": "notificationsInfoIcon.foreground"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "bun run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.14.4",
    "@types/vscode": "^1.31.0",
    "tslint": "^5.14.0",
    "typescript": "^5.9.3"
  },
  "private": true
}
