{
  "name": "mdmarkup",
  "displayName": "Markdown Annotations and Formatting",
  "description": "Markdown formatting and CriticMarkup annotations tools",
  "version": "0.9.0",
  "engines": {
    "vscode": "^1.103.2"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "markdown",
    "mdmarkup",
    "critic markup",
    "annotations",
    "formatting",
    "markdown formatting"
  ],
  "publisher": "jbearak",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/jbearak/mdmarkup/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jbearak/mdmarkup.git"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mdmarkup.nextChange",
        "title": "Next Change"
      },
      {
        "command": "mdmarkup.prevChange",
        "title": "Previous Change"
      },
      {
        "command": "mdmarkup.markAddition",
        "title": "Mark as Addition"
      },
      {
        "command": "mdmarkup.markDeletion",
        "title": "Mark as Deletion"
      },
      {
        "command": "mdmarkup.markSubstitution",
        "title": "Substitution"
      },
      {
        "command": "mdmarkup.highlight",
        "title": "Highlight"
      },
      {
        "command": "mdmarkup.insertComment",
        "title": "Comment"
      },
      {
        "command": "mdmarkup.highlightAndComment",
        "title": "Comment and highlight"
      },
      {
        "command": "mdmarkup.substituteAndComment",
        "title": "Comment and substitution"
      },
      {
        "command": "mdmarkup.additionAndComment",
        "title": "Comment and mark as addition"
      },
      {
        "command": "mdmarkup.deletionAndComment",
        "title": "Comment and mark as deletion"
      },
      {
        "command": "mdmarkup.formatBold",
        "title": "Bold"
      },
      {
        "command": "mdmarkup.formatItalic",
        "title": "Italic"
      },
      {
        "command": "mdmarkup.formatBoldItalic",
        "title": "Bold Italic"
      },
      {
        "command": "mdmarkup.formatStrikethrough",
        "title": "Strikethrough"
      },
      {
        "command": "mdmarkup.formatUnderline",
        "title": "Underline"
      },
      {
        "command": "mdmarkup.formatInlineCode",
        "title": "Inline Code"
      },
      {
        "command": "mdmarkup.formatCodeBlock",
        "title": "Code Block"
      },
      {
        "command": "mdmarkup.formatLink",
        "title": "Link"
      },
      {
        "command": "mdmarkup.formatBulletedList",
        "title": "Bulleted List"
      },
      {
        "command": "mdmarkup.formatNumberedList",
        "title": "Numbered List"
      },
      {
        "command": "mdmarkup.formatTaskList",
        "title": "Task List"
      },
      {
        "command": "mdmarkup.formatQuoteBlock",
        "title": "Quote Block"
      },
      {
        "command": "mdmarkup.formatHeading1",
        "title": "Heading 1"
      },
      {
        "command": "mdmarkup.formatHeading2",
        "title": "Heading 2"
      },
      {
        "command": "mdmarkup.formatHeading3",
        "title": "Heading 3"
      },
      {
        "command": "mdmarkup.formatHeading4",
        "title": "Heading 4"
      },
      {
        "command": "mdmarkup.formatHeading5",
        "title": "Heading 5"
      },
      {
        "command": "mdmarkup.formatHeading6",
        "title": "Heading 6"
      },
      {
        "command": "mdmarkup.reflowTable",
        "title": "Reflow Table"
      }
    ],
    "submenus": [
      {
        "id": "markdown.annotations",
        "label": "Markdown Annotations",
        "icon": "$(comment-discussion)"
      },
      {
        "id": "markdown.formatting",
        "label": "Markdown Formatting",
        "icon": "$(edit)"
      },
      {
        "id": "markdown.heading",
        "label": "Heading"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@1"
        },
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown && !isInDiffEditor",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "submenu": "markdown.annotations",
          "when": "editorLangId == markdown",
          "group": "9_markdown@1"
        },
        {
          "submenu": "markdown.formatting",
          "when": "editorLangId == markdown",
          "group": "9_markdown@2"
        }
      ],
      "markdown.annotations": [
        {
          "command": "mdmarkup.highlightAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@1"
        },
        {
          "command": "mdmarkup.additionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@2"
        },
        {
          "command": "mdmarkup.deletionAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@3"
        },
        {
          "command": "mdmarkup.substituteAndComment",
          "when": "editorLangId == markdown",
          "group": "1_mdmarkup@4"
        },
        {
          "command": "mdmarkup.highlight",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@1"
        },
        {
          "command": "mdmarkup.markAddition",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@2"
        },
        {
          "command": "mdmarkup.markDeletion",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@3"
        },
        {
          "command": "mdmarkup.markSubstitution",
          "when": "editorLangId == markdown",
          "group": "2_mdmarkup@4"
        },
        {
          "command": "mdmarkup.prevChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@1"
        },
        {
          "command": "mdmarkup.nextChange",
          "when": "editorLangId == markdown",
          "group": "3_navigation@2"
        }
      ],
      "markdown.formatting": [
        {
          "command": "mdmarkup.formatBold",
          "when": "editorLangId == markdown",
          "group": "1_format@1"
        },
        {
          "command": "mdmarkup.formatItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@2"
        },
        {
          "command": "mdmarkup.formatBoldItalic",
          "when": "editorLangId == markdown",
          "group": "1_format@3"
        },
        {
          "command": "mdmarkup.formatStrikethrough",
          "when": "editorLangId == markdown",
          "group": "1_format@4"
        },
        {
          "command": "mdmarkup.formatUnderline",
          "when": "editorLangId == markdown",
          "group": "1_format@5"
        },
        {
          "command": "mdmarkup.formatInlineCode",
          "when": "editorLangId == markdown",
          "group": "1_format@6"
        },
        {
          "command": "mdmarkup.formatCodeBlock",
          "when": "editorLangId == markdown",
          "group": "1_format@7"
        },
        {
          "command": "mdmarkup.formatLink",
          "when": "editorLangId == markdown",
          "group": "1_format@8"
        },
        {
          "command": "mdmarkup.formatBulletedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@1"
        },
        {
          "command": "mdmarkup.formatNumberedList",
          "when": "editorLangId == markdown",
          "group": "2_lists@2"
        },
        {
          "command": "mdmarkup.formatTaskList",
          "when": "editorLangId == markdown",
          "group": "2_lists@3"
        },
        {
          "command": "mdmarkup.formatQuoteBlock",
          "when": "editorLangId == markdown",
          "group": "2_lists@4"
        },
        {
          "command": "mdmarkup.reflowTable",
          "when": "editorLangId == markdown",
          "group": "2_tables@5"
        },
        {
          "submenu": "markdown.heading",
          "when": "editorLangId == markdown",
          "group": "3_heading@1"
        }
      ],
      "markdown.heading": [
        {
          "command": "mdmarkup.formatHeading1",
          "when": "editorLangId == markdown",
          "group": "1_heading@1"
        },
        {
          "command": "mdmarkup.formatHeading2",
          "when": "editorLangId == markdown",
          "group": "1_heading@2"
        },
        {
          "command": "mdmarkup.formatHeading3",
          "when": "editorLangId == markdown",
          "group": "1_heading@3"
        },
        {
          "command": "mdmarkup.formatHeading4",
          "when": "editorLangId == markdown",
          "group": "1_heading@4"
        },
        {
          "command": "mdmarkup.formatHeading5",
          "when": "editorLangId == markdown",
          "group": "1_heading@5"
        },
        {
          "command": "mdmarkup.formatHeading6",
          "when": "editorLangId == markdown",
          "group": "1_heading@6"
        }
      ]
    },
    "keybindings": [
      {
        "command": "mdmarkup.nextChange",
        "key": "alt+shift+j",
        "when": "editorTextFocus && editorLangId == markdown"
      },
      {
        "command": "mdmarkup.prevChange",
        "key": "alt+shift+k",
        "when": "editorTextFocus && editorLangId == markdown"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "path": "./syntaxes/mdmarkup.json",
        "scopeName": "mdmarkup.injection",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "markdown.previewStyles": [
      "./media/mdmarkup.css"
    ],
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "Markdown Annotations",
      "properties": {
        "mdmarkup.includeAuthorNameInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include author name in comment attribution"
        },
        "mdmarkup.authorName": {
          "type": "string",
          "default": "",
          "description": "Author name to use in comments (leave empty to use OS username)"
        },
        "mdmarkup.includeTimestampInComments": {
          "type": "boolean",
          "default": true,
          "description": "Include timestamp in comment author attribution (format: username (yyyy-mm-dd hh:mm))"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.14.4",
    "@types/vscode": "^1.103.2",
    "fast-check": "^4.3.0",
    "tslint": "^5.14.0",
    "typescript": "^5.9.3"
  },
  "private": true,
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}
