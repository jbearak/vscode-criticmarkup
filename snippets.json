{
    "Mark as addition": {
        "prefix": "Mark as addition",
        "body": "{++$TM_SELECTED_TEXT++}",
        "description": "Add text."
    },
    "Mark as deletion": {
        "prefix": "Mark as deletion",
        "body": "{--$TM_SELECTED_TEXT--}",
        "description": "Delete text."
    },
    "Substitution": {
        "prefix": "Substitution",
        "body": "{~~${TM_SELECTED_TEXT:$1}~>$2~~}",
        "description": "Substitute text."
    },
    "Comment": {
        "prefix": "Comment",
        "body": "{>>$1<<}",
        "description": "Add comment."
    },
    "Highlight and comment": {
        "prefix": "Highlight and comment",
        "body": "{==${TM_SELECTED_TEXT:$1}==}{>>$2<<}",
        "description": "Highlight (and comment) text."
    }
}