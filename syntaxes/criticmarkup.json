{
    "injectionSelector": "L:text.html.markdown",
    "patterns": [
        { "include": "#addition" },
        { "include": "#deletion" },
        { "include": "#substitution" },
        { "include": "#comment" },
        { "include": "#highlight" }
    ],
	"repository": {
		"addition": {
			"begin": "\\{\\+\\+",
			"end": "\\+\\+\\}",
			"name": "markup.inserted"
		},
		"deletion": {
			"begin": "\\{--",
			"end": "--\\}",
			"name": "markup.deleted"
		},
		"substitution": {
			"begin": "\\{\\~\\~",
			"end": "\\~\\~\\}",
			"name": "markup.changed"
		},
		"comment": {
			"begin": "\\{>>",
			"end": "<<\\}",
			"name": "entity.name.function"
		},
		"highlight": {
			"begin": "\\{==",
			"end": "==\\}",
			"name": "markup.bold"
		}
	},
    "scopeName": "criticmarkup.injection"
}